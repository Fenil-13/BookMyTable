<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/black"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookingDate"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:text="17/10"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"/>

            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="0dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/historyCard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/light_blue_100"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/bookingRestaurantName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="D Pizza House"
                                android:fontFamily="@font/poppins"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bookingTableType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 SEATER"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:fontFamily="@font/poppins"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/grey_40" />

                            <TextView
                                android:id="@+id/bookingTiming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:text="08:00 AM - 11:35 PM"
                                android:ellipsize="end"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/grey_40" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/dummy"
                            app:civ_border="false" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/overlay_dark_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/_2sdp">

                        <Button
                            android:id="@+id/tvDetails"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_29sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:text="DETAILS"
                            android:textStyle="bold"
                            android:textColor="@color/grey_60"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/ivDelete"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_delete"
                            app:tint="@color/grey_60" />


                        <Button
                            android:id="@+id/tvMarkAsCompleted"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_29sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="Mark As Completed"
                            android:textStyle="bold"
                            android:textColor="@color/grey_60"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>