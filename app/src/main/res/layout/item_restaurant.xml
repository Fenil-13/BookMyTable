<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/black"
    android:id="@+id/restaurantContainer"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_13sdp"
        android:layout_margin="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_900"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivRestaurantPic"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_margin="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy"
                app:riv_corner_radius="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRestaurantHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:fontFamily="@font/baloo_bhai"
                    android:gravity="center_vertical"
                    android:text="Abc Fram House"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:includeFontPadding="false"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:fontFamily="@font/baloo_bhai"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/white"
                    android:id="@+id/tvRestaurantLocation"
                    android:text="Shree Hari Dhosa, infront of polaris, Kamrej Surat, Gujarat, India"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/baloo_bhai"
                    android:textStyle="bold"
                    android:id="@+id/tvTiming"
                    android:textColor="@color/grey_20"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="8:00 AM to 9:00 PM"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>