<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookMyTable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
    </style>
    <style name="Theme.BookMyTable.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BookMyTable.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BookMyTable.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextInputLayout">
        <item name="colorControlActivated">#FC8019</item>
    </style>

    <style name="TextInputLayoutHint">
        <item name="android:textColorHint">@color/dot_inactive</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
</resources>